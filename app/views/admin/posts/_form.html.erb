<%= form_for([:admin, @post], html: { class: 'admin-form' }) do |f| %>
  <% if @post.errors.any? %>
    <div id='error_explanation'>
      <h2><%= t('general.error_found', count: @post.errors.count) %></h2>
      <ul>
      <% @post.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class='form-group row'>
    <div class="col-md-4">
      <%= f.label :post_category_id, { class: 'form-control-label' } %>
      <%= f.select :post_category_id,
            @post_categories.collect {|pc| [pc.title, pc.id]},
            { prompt: 'Select...' },
            { class: 'form-control col-md-4' } %>
    </div>
  </div>
  <div class='form-group row'>
    <div class='col-md-12'>
      <%= f.label :title, { class: 'form-control-label' } %>
      <%= f.text_field :title, { class: 'form-control' } %>
    </div>
  </div>
  <div class='form-group row'>
    <div class='col-md-12'>
      <%= f.label :intro, { class: 'form-control-label' } %>
      <%= f.text_field :intro, { class: 'form-control' } %>
    </div>
  </div>
  <div class='form-group row'>
    <div class='col-md-12'>
      <%= f.label :text, { class: 'form-control-label' } %>
      <%= f.text_field :text, { class: 'form-control' } %>
    </div>
  </div>

  <div class='actions'>
    <%= f.submit 'Gravar', { class: 'btn btn-primary' } %>
  </div>
<% end %>
