<p id='notice'><%= notice %></p>

<h1>Listing Post Categories</h1>

<table class='table table-sm table-bordered'>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Slug</th>
      <th colspan='3'></th>
    </tr>
  </thead>

  <tbody>
    <% @post_categories.each do |pc| %>
      <tr>
        <td><%= pc.title %></td>
        <td><%= pc.description %></td>
        <td><%= pc.slug %></td>
        <td><%= link_to 'Show', admin_post_category_path(pc) %></td>
        <td><%= link_to 'Edit', edit_admin_post_category_path(pc) %></td>
        <td><%= link_to 'Destroy', admin_post_category_path(pc), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

