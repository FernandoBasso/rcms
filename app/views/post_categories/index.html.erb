<p id="notice"><%= notice %></p>

<h1>Listing Post Categories</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Slug</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @post_categories.each do |post_category| %>
      <tr>
        <td><%= post_category.title %></td>
        <td><%= post_category.description %></td>
        <td><%= post_category.slug %></td>
        <td><%= link_to 'Show', post_category %></td>
        <td><%= link_to 'Edit', edit_post_category_path(post_category) %></td>
        <td><%= link_to 'Destroy', post_category, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Post category', new_post_category_path %>
